{
  "version": "0.2.0",
  "configurations": [

    {
  "name": "Debug Cucumber @debug",
  "type": "node",
  "request": "launch",
  "program": "${workspaceFolder}/node_modules/.bin/cucumber-js",
  "console": "integratedTerminal",
  "internalConsoleOptions": "neverOpen",
  "env": {
    "PWDEBUG": "1",
    "HEADLESS": "false"
  },
  "args": [
    "--require", "steps/*.ts",
    "--tags", "@debug"
  ]
}
  ]
}
